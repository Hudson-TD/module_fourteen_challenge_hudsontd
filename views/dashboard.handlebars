<form>
  <div class='form-group'>
    <label for='post-title'>Title</label>
    <input class='form-control' name="post-title" placeholder='Post title here' />
  </div>

  <div class='form-group'>
    <label for='post-text'>Body</label>
    <textarea class='form-control' name="post-text" rows='5'></textarea>
  </div>
</form>

<button
  type='button'
  class='btn btn-success btn-block mb-4'
  id='postSubmitBtn'
>Submit Post
</button>

{{#if post.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> postElement post}}
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="../js/newPost.js"></script>