<div class="border-top pt-3">
  <h2>New Post</h2>
</div>

<form>
  <div class='form-group'>
    <label for='post-title'>Title</label>
    <input class='form-control' name="post-title" placeholder='Post title here' />
  </div>

  <div class='form-group'>
    <label for='post-text'>Body</label>
    <textarea class='form-control' name="post-text" rows='5'></textarea>
  </div>
</form>

<button
  type='button'
  class='btn btn-success btn-block mb-4'
  id='postSubmitBtn'
>Submit Post
</button>

<div class="border-top pt-3">
  <h2>Post History</h2>
</div>

<section>
  <ul class="post-list">
    <br>
    {{#each posts as |post|}}
      <li class="border border p-2 mt-1">
        {{> postElement post }}
      </li>
        {{/each}}
    <br>
</ul>
</section>


<script src="../js/newPost.js"></script>