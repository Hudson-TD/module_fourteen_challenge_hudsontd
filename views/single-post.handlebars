<div class='post'>
  <article class='card'>
    <div class='card-header my-2'>
      <h2>{{post.title}}</h2>
      <div>
        Posted by
        {{post.user.username}}
        on
        {{format_date post.created_at}}
      </div>
    </div>
    <div class='card-body my-2'>
      {{post.post_text}}
    </div>
  </article>

  {{> commentElement post.comments}}

<script src='/javascript/comment.js'></script>