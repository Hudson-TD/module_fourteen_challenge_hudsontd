<div class='post'>
  <article class='card'>
    <div class='card-header my-2'>
      <h2>{{post.title}}</h2>
      <div>
        Posted by
        {{post.user.username}}
        on
        {{format_date post.created_at}}
      </div>
    </div>
    <div class='card-body my-2'>
      {{post.post_text}}
    </div>
  </article>
</div>

<div>
  <form id='new-comment-form' class='card'>
    <div class='card-header'>
      <h3>Add New Comment</h3>
    </div>

    <div class='card-body'>
      <input type='hidden' name='post-id' value='{{post.id}}' />

      <label class='form-label' for='comment-body'>Comment</label>

      <textarea name='comment-body' class='form-input'></textarea>

      <button class='btn' id="comment-form">Submit</button>
    </div>
  </form>
</div>

{{> commentElement post.comments}}

<script src='../js/comment.js'></script>