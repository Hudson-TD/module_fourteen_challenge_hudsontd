<div class="post">
  <article class="card">
    <div class="card-header my-2">
      <h2>{{post.title}}</h2>
      <div>
        Posted by {{post.user.username}} on {{format_date post.created_at}}
      </div>
    </div>
    <div class="card-body my-4 ">
      {{post.post_text}}
    </div>
  </article>

  <form id="new-comment-form" class="card my-2">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>