<!-- Section: Design Block -->
<section class='text-center text-lg-start'>
  <style>
    .rounded-t-5 { border-top-left-radius: 0.5rem; border-top-right-radius:
    0.5rem; } @media (min-width: 992px) { .rounded-tr-lg-0 {
    border-top-right-radius: 0; } .rounded-bl-lg-5 { border-bottom-left-radius:
    0.5rem; } }
  </style>
  <div class='container mt-5 d-flex justify-content-center'>
      <div class='col-lg-8'>
        <div class='container border p-5'>
          <form>
            <div class='form-outline mb-4'>
              <input type='email' id='usernameLogin' class='form-control my-1' />
              <label class='form-label' for='usernameLogin'>Username</label>
            </div>

            <div class='form-outline mb-4'>
              <input type='password' id='passwordLogin' class='form-control my-1' />
              <label class='form-label' for='passwordLogin'>Password</label>
            </div>

            <button
              type='button'
              class='btn btn-success btn-block mb-4'
              id='loginBtn'
            >Login</button>

            <button
              type='button'
              class='btn btn-secondary btn-block mb-4'
              id='signupRedirectBtn'
            >Click here to create an account</button>
          </form>

        </div>
      </div>
  </div>
</section>


